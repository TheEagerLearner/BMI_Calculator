<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#1b1717"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:id="@+id/Female"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <ImageView
                    android:id="@+id/imgFemale"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_unclickedfemale"
                    android:padding="00dp"
                    android:layout_margin="10dp"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/Male"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <ImageView
                    android:id="@+id/imgMale"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_unclickedmale"
                    android:padding="0dp"
                    android:layout_margin="10dp"
                    />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="20dp"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="#1b2021"
                android:padding="5dp"

                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                <TextView
                    android:id="@+id/txtHeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/questrial"
                    android:text="Height"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="30sp"
                    android:layout_marginTop="10dp"/>

                    <TextView
                        android:id="@+id/txtHeightValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtHeight"
                        android:text="150cm"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:fontFamily="@font/questrial"
                        android:layout_marginTop="5dp"


                        android:textSize="40sp"
                        />

                <androidx.appcompat.widget.AppCompatSeekBar
                    android:id="@+id/sliderHeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtHeightValue"
                    android:layout_marginTop="10dp"
                    android:max="300"
                    android:thumbTint="#ce1212"
                    android:layout_marginHorizontal="10dp"
                    android:progress="150"
                    android:progressTint="#ce1212"
                    android:progressBackgroundTint="#ce1212"
                    />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp"
                android:backgroundTint="#1b2021"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    >
                    <TextView
                        android:id="@+id/txtWeight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Weight"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:fontFamily="@font/questrial"
                        android:textSize="30sp"
                        android:layout_marginTop="5dp"
                        />
                    <TextView
                        android:id="@+id/txtWeightValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textAlignment="center"
                        android:layout_below="@id/txtWeight"
                        android:textColor="#ffffff"
                        android:fontFamily="@font/questrial"
                        android:textSize="40sp"
                        android:layout_marginTop="10dp"
                        />
                    
                    <Button
                        android:id="@+id/btnWSub"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/ic_baseline_remove_circle_outline_24"
                        android:backgroundTint="@color/white"
                        android:layout_margin="5dp"

                        />
                    <Button
                        android:id="@+id/btnWAdd"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/ic_baseline_add_circle_outline_24"
                        android:backgroundTint="#ffffff"
                        android:layout_margin="5dp"
                        />
                </RelativeLayout>
                
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp"
                android:backgroundTint="#1b2021"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    >
                    <TextView
                        android:id="@+id/txtAge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Age"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:fontFamily="@font/questrial"
                        android:textSize="30sp"
                        android:layout_marginTop="5dp"
                        />
                    <TextView
                        android:id="@+id/txtAgeValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textAlignment="center"
                        android:layout_below="@id/txtAge"
                        android:textColor="#ffffff"
                        android:fontFamily="@font/questrial"
                        android:textSize="40sp"
                        android:layout_marginTop="10dp"
                        />

                    <Button
                        android:id="@+id/btnASub"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/ic_baseline_remove_circle_outline_24"
                        android:backgroundTint="#ffffff"
                        android:layout_margin="5dp"
                        />
                    <Button
                        android:id="@+id/btnAAdd"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/ic_baseline_add_circle_outline_24"
                        android:backgroundTint="#ffffff"
                        android:layout_margin="5dp"
                        />
                </RelativeLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>
        <Button
            android:id="@+id/btnCalculate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginHorizontal="5dp"
            android:text="Calculate Your BMI"
            android:padding="10dp"
            android:textSize="18sp"
            android:backgroundTint="#ce1212"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>